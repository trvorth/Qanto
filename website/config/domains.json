{
  "domains": {
    "main": {
      "domain": "qanto.org",
      "subdomain": "www",
      "root": "/usr/share/nginx/html",
      "index": "index.html",
      "description": "Main Qanto website"
    },
    "explorer": {
      "domain": "explorer.qanto.org",
      "subdomain": "explorer",
      "root": "/usr/share/nginx/html/explorer",
      "index": "index.html",
      "description": "Qanto blockchain explorer (future implementation)",
      "status": "planned"
    }
  },
  "ssl": {
    "enabled": true,
    "cert_path": "/etc/ssl/certs/qanto.org.crt",
    "key_path": "/etc/ssl/private/qanto.org.key"
  },
  "security": {
    "hsts_max_age": 31536000,
    "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.qanto.org;",
    "x_frame_options": "DENY",
    "x_content_type_options": "nosniff"
  },
  "performance": {
    "gzip_enabled": true,
    "brotli_enabled": true,
    "cache_static_files": "1y",
    "cache_html_files": "1h"
  }
}