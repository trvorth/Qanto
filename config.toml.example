# Qanto Example Configuration
# Optimized for 32+ BPS (blocks per second) and 10M+ TPS performance

[network]
p2p_address = "127.0.0.1:8333"
network_id = "qanto-testnet"
max_peers = 32
bootstrap_peers = []

[api]
api_address = "127.0.0.1:8080"
enable_api = true
enable_websocket = true
websocket_address = "127.0.0.1:8081"

[mining]
enable_mining = true
mining_threads = 4
use_gpu = false
mining_chain_id = 0
# MICROSECOND PRECISION: Optimized for 31ms block time
mining_interval_ms = 30  # 30ms mining interval for 31ms block target
dummy_tx_interval_ms = 15  # 15ms dummy TX generation for high frequency testing
dummy_tx_per_cycle = 100  # Generate 100 dummy TXs per cycle

[consensus]
# CRITICAL: 31ms block time for 32.25+ BPS performance
target_block_time = 31  # milliseconds (was 30 seconds)
difficulty = 1
zk_enabled = true
max_block_size = 10485760  # 10MB for high TPS
max_transactions_per_block = 100000  # Support 10M+ TPS with batching

# -----------------------------------------------------------------------------
# Blockchain Parameters
# -----------------------------------------------------------------------------

# Total number of chains in the Qanto network.
[cite_start]num_chains = 1 [cite: 1]

# The address of the genesis contract that receives the initial coin supply.
[cite_start]contract_address = "4a8d50f24c5ffec79ac665d123a3bdecacaa95f9f26751385a5a925c647bd394" [cite: 1]

# Maximum total supply of Qanto coins.
max_amount = 21000000000

# -----------------------------------------------------------------------------
# File and Database Paths
# -----------------------------------------------------------------------------

# Directory for storing blockchain data and temporary files.
data_dir = "./data"

# Path to the main database file.
db_path = "./data/qanto.db"

# Path to the encrypted wallet file.
wallet_path = "wallet.key"

# Path to the P2P identity key file.
p2p_identity_path = "p2p_identity.key"

# Path to the log file (optional, leave empty to disable file logging).
log_file_path = "./logs/qanto.log"

# Path to TLS certificate file (optional, for secure connections).
# tls_cert_path = "./certs/server.crt"

# Path to TLS private key file (optional, for secure connections).
# tls_key_path = "./certs/server.key"

# -----------------------------------------------------------------------------
# Mining Configuration (Optional)
# -----------------------------------------------------------------------------

# Mining interval in seconds (optional, defaults to 5 seconds).
# mining_interval_secs = 5

# Dummy transaction generation interval in seconds (optional).
# dummy_tx_interval_secs = 5

# Number of dummy transactions to generate per cycle (optional).
# dummy_tx_per_cycle = 100000

# Maximum age for transactions in mempool in seconds (optional).
# mempool_max_age_secs = 3600

# Maximum size of mempool in bytes (optional).
# mempool_max_size_bytes = 67108864

# -----------------------------------------------------------------------------
# P2P Network Tuning
# -----------------------------------------------------------------------------
[p2p]

# Interval in milliseconds for sending heartbeat messages to stay connected.
[cite_start]heartbeat_interval = 500 [cite: 1]

# Desired number of connections to maintain.
[cite_start]mesh_n = 8 [cite: 1]

# Low watermark for number of connections. If connections drop below this,
# the node will actively seek more peers.
[cite_start]mesh_n_low = 6 [cite: 1]

# High watermark for number of connections. The node will start pruning
# connections if the count exceeds this.
[cite_start]mesh_n_high = 16 [cite: 1]

# Minimum number of outbound connections to establish.
[cite_start]mesh_outbound_min = 4 [cite: 1]

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------
[logging]

# Log level verbosity. Options are: "trace", "debug", "info", "warn", "error".
[cite_start]level = "info" [cite: 1]