# Qanto Blockchain Configuration
# Copy this file to .env and configure for your environment

# Network Configuration
QANTO_P2P_ADDRESS=/ip4/0.0.0.0/tcp/8080
QANTO_API_ADDRESS=0.0.0.0:9000
QANTO_NETWORK_ID=testnet

# Database Configuration
DATABASE_URL=sqlite:qantodag.db
STORAGE_PATH=./data

# Security Configuration
SECRET_KEY=your_secret_key_here
WALLET_PASSWORD=your_wallet_password_here

# Mining Configuration
MINING_ENABLED=true
MINING_THREADS=4

# Logging Configuration
RUST_LOG=info
LOG_LEVEL=info

# Performance Configuration
MAX_CONNECTIONS=100
CACHE_SIZE=1000

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Development Configuration (set to false for production)
DEBUG_MODE=false
TEST_MODE=false
