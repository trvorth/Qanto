# Qanto Docker Compose Environment Configuration
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# QANTO NODE CONFIGURATION
# =============================================================================

# Version and Environment
QANTO_VERSION=latest
RUST_VERSION=1.75
ENVIRONMENT=development
NODE_NAME=qanto-node-1

# Network Ports
EXTERNAL_API_PORT=8080
INTERNAL_API_PORT=8081
P2P_PORT=8333
METRICS_PORT=9090

# Resource Limits
CPU_LIMIT=4.0
MEMORY_LIMIT=8G
CPU_RESERVATION=2.0
MEMORY_RESERVATION=4G

# Performance Tuning
RUST_LOG=info
RUST_BACKTRACE=1
QANTO_THREADS=4
QANTO_MAX_CONNECTIONS=100

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true

# =============================================================================
# MONITORING SERVICES
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9091

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Loki
LOKI_PORT=3100

# =============================================================================
# STORAGE PATHS
# =============================================================================

# Qanto Data Directories
QANTO_DATA_PATH=./data
QANTO_KEYS_PATH=./keys
QANTO_LOGS_PATH=./logs

# Monitoring Data Directories
PROMETHEUS_DATA_PATH=./monitoring/prometheus/data
GRAFANA_DATA_PATH=./monitoring/grafana/data
LOKI_DATA_PATH=./monitoring/loki/data

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Docker Network
NETWORK_SUBNET=172.20.0.0/16

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# 1. Change GRAFANA_ADMIN_PASSWORD to a strong password
# 2. Ensure wallet password file is properly secured
# 3. Use proper file permissions for keys directory (700)
# 4. Consider using Docker secrets for sensitive data in production
# 5. Enable TLS/SSL for external API endpoints in production
#
# =============================================================================